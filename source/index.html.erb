<div id="box">
  <!-- Scroll Progress Indicator -->
  <div class="scroll-progress">
    <div class="scroll-progress-bar"></div>
  </div>
  <!-- Theme Toggle -->
  <div class="theme-toggle">
    <button id="theme-toggle-btn" class="theme-toggle-btn">
      <div class="switch-track">
        <div class="switch-thumb">
          <i class="fas fa-moon dark-icon"></i>
          <i class="fas fa-sun light-icon"></i>
        </div>
      </div>
    </button>
  </div>
  <%= partial "partials/navbar" %>
  <!-- Hero Section -->
  <section id="hero" class="section hero-section">
    <div class="hero-content">
      <div class="hero-text">
        <h1 class="hero-title">Will Sebastian</h1>
        <p class="hero-subtitle">Full-Stack Web Developer</p>
        <div class="hero-cta">
          <a href="#projects" class="btn-primary">View My Work</a>
          <a href="#about" class="btn-secondary">Learn More</a>
        </div>
      </div>
    </div>
  </section>
  <!-- About Section -->
  <section id="about" class="section">
    <div class="section-content">
      <h2 class="section-title">About Me</h2>
      <div class="about-grid">
        <div class="about-text">
          <p class="about-description">
            After relocating from America to Japan a little over three years ago, I discovered my love for computer programming while working as a teacher here. This led me to enroll in Le Wagon’s Full-Stack Web Development Bootcamp in Tokyo.
          </p>
          <p class="about-description">
            Now, having just completed that course, I’m excited to keep building my skills and be a part of team where I can grow and contribute.
          </p>
          <div class="skills-container">
            <h3>Technologies I Work With</h3>
            <div class="skills-grid">
              <div class="skill-item">Ruby on Rails</div>
              <div class="skill-item">JavaScript</div>
              <div class="skill-item">React</div>
              <div class="skill-item">PostgreSQL</div>
              <div class="skill-item">HTML/CSS</div>
              <div class="skill-item">Git</div>
            </div>
          </div>
        </div>
        <div class="about-visual">
          <div class="timeline">
            <div class="timeline-item">
              <div class="timeline-dot"></div>
              <div class="timeline-content">
                <h4>1991</h4>
                <p>Born in New Orleans, USA</p>
              </div>
            </div>
            <div class="timeline-item">
              <div class="timeline-dot"></div>
              <div class="timeline-content">
                <h4>2022</h4>
                <p>Relocated to Japan</p>
              </div>
            </div>
            <div class="timeline-item">
              <div class="timeline-dot"></div>
              <div class="timeline-content">
                <h4>2025</h4>
                <p>Completed Le Wagon Bootcamp</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- Projects Section -->
  <section id="projects" class="section">
    <div class="section-content">
      <h2 class="section-title">Featured Projects</h2>
      <div class="projects-grid">
        <% data.projects.each_with_index do |project, i| %>
          <div class="project-card" data-project-id="<%= i %>">
            <div class="project-image">
              <img src="<%= project.images.first %>" alt="<%= project.name %>">
              <div class="project-overlay">
                <a href="<%= project.url %>" target="_blank" class="project-link">
                  <i class="fas fa-external-link-alt"></i>
                </a>
              </div>
            </div>
            <div class="project-content">
              <h3 class="project-title"><%= project.name %></h3>
              <p class="project-description"><%= project.description %></p>
              <div class="project-tech">
                <% project.tech.each do |tech| %>
                  <span class="tech-tag"><%= tech %></span>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </section>
  <!-- Socials Section -->
  <section id="contact" class="section">
    <div class="section-content">
      <h2 class="section-title">Socials</h2>
      <div class="contact-content">
        <div class="contact-links">
          <a href="https://github.com/MaddRussian" target="_blank" class="contact-link">
            <i class="fab fa-github"></i>
            <span>GitHub</span>
          </a>
          <a href="https://www.linkedin.com/in/william-sebastian-3a757b239" target="_blank" class="contact-link">
            <i class="fab fa-linkedin"></i>
            <span>LinkedIn</span>
          </a>
        </div>
      </div>
    </div>
  </section>
</div>
